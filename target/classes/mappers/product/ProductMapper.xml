	<insert id="addQnaQ">
		insert into qna_Q(question_id,question_writer_id,product_post_id,question_title,question_content,question_create_date)
			values(#{w},#{w},#{w},#{c},#{c},#{t})
	</insert>
	 -->
</mapper>